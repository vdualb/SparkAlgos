<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="../SparkCL/SparkCL.csproj" />
  </ItemGroup>
  
  <PropertyGroup>
    <!-- Use double precision floating point numbers -->
    <DefineConstants>TRACE;USE_DOUBLE</DefineConstants>
    <!-- ;USE_DOUBLE -->
  </PropertyGroup>

  <ItemGroup>
    <None Update="SlaeSolver/Solvers.cl">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="Blas.cl">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="Matrices/MsrMatrix.cl">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="Matrices/DiagMatrix.cl">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="Matrices/SymDiagMatrix.cl">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
